    <table class="table-bordered">
        <tr>
            <th><a href="#mb">Motherboard</a></th>
            <th><a href="#pr">Processors</a></th>
            <th><a href="#me">RAM</a></th>
            <th><a href="#hd">Hard drives</a></th>
            <th><a href="#sc">Sound cards</a></th>
            <th><a href="va">Video adapters</a></th>
            <th><a href="od">Optical drives</a></th>
            <th><a href="ps">Power supplies</a></th>
            <th><a href="cc">Computer cases</a></th>
        </tr>
    </table>

    <p></p>
