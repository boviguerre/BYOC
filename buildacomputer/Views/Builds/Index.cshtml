@using System.Collections.Generic
<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <link rel="icon" type="image/ico" href="favicon.ico">

    <title>ViewBag.Title</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    <script>
        $(document).ready(function () {
            $(".button-motherboards").click(function () {
                $(".tr-motherboards-hidden").toggle()
            });
        });

        $(document).ready(function () {
            $(".button-processors").click(function () {
                $(".tr-processors-hidden").toggle()
            });
        });

        $(document).ready(function () {
            $(".button-memories").click(function () {
                $(".tr-memories-hidden").toggle()
            });
        });

        $(document).ready(function () {
            $(".button-harddrives").click(function () {
                $(".tr-harddrives-hidden").toggle()
            });
        });

        $(document).ready(function () {
            $(".button-soundcards").click(function () {
                $(".tr-soundcards-hidden").toggle()
            });
        });

        $(document).ready(function () {
            $(".button-videoadapters").click(function () {
                $(".tr-videoadapters-hidden").toggle()
            });
        });

        $(document).ready(function () {
            $(".button-opticaldrives").click(function () {
                $(".tr-opticaldrives-hidden").toggle()
            });
        });

        $(document).ready(function () {
            $(".button-powersupplies").click(function () {
                $(".tr-powersupplies-hidden").toggle()
            });
        });

        $(document).ready(function () {
            $(".button-computercases").click(function () {
                $(".tr-computercases-hidden").toggle()
            });
        });
    </script>

</head>

<body>
    <button class="button-motherboards">MOTHERBOARDS</button><button class="button-processors">PROCESSORS</button><button class="button-memories">RAM</button><button class="button-harddrives">HARD DRIVES</button><button class="button-soundcards">SOUND CARDS</button><button class="button-videoadapters">VIDEO ADAPTERS</button><button class="button-opticaldrives">OPTICAL DRIVES</button><button class="button-powersupplies">POWER SUPPLIES</button><button class="button-computercases">COMPUTER CASES</button>

    <p>&nbsp;</p>

    @*MOTHERBOARDS TABLE*@
    <table class="table">
        <tr class="tr-motherboards-hidden" style="display:none">
            <th>
                MOTHERBOARD NAME
            </th>
            <th>
                Processor socket
            </th>
            <th>
                RAM type
            </th>
            <th>
                Form factor
            </th>
            <th>
                Integrated GPU
            </th>
            <th>
                Power supply standard
            </th>
            <th>
                LAN chip
            </th>
            <th>
                Sound chip
            </th>
        </tr>
        @foreach (var x in ViewBag.mb)
        {
            <tr class="tr-motherboards-hidden" style="display:none">
                <td>
                    @x.motherboard_name
                </td>
                <td>
                    @x.processor_sockets.processor_socket_name
                </td>
                <td>
                    @x.memory_types.memory_type_name
                </td>
                <td>
                    @x.motherboard_form_factors.motherboard_form_factor_name
                </td>
                <td>
                    @if (x.gpu_id != null)
                    {
                        @x.gpus.gpu_name
                    }
                </td>
                <td>
                    @x.power_supply_standards.power_supply_standard_name
                </td>
                <td>
                    @x.lan_chips.lan_chip_name
                </td>
                <td>
                    @x.sound_chips.sound_chip_name
                </td>
                <td>
                    <button name="" type="button" value=@x.motherboard_id onclick="doajaxmb(this)">Add to Cart!</button>
                </td>
            </tr>
        }
    </table>


    @*PROCESSORS TABLE*@
    <table class="table" valign="top">
        <tr class="tr-processors-hidden" style="display:none">
            <th>
                PROCESSOR NAME
            </th>
            <th>
                Processor socket name
            </th>
            <th>
                Frequency (mHz)
            </th>
            <th>
                Processor core count
            </th>
        </tr>

        @foreach (var x in ViewBag.pr)
        {
            <tr class="tr-processors-hidden" style="display:none">
                <td>
                    @x.processor_name
                </td>
                <td>
                    @x.processor_sockets.processor_socket_name
                </td>
                <td>
                    @x.frequency_mhz
                </td>
                <td>
                    @x.processor_cores.processor_core_count
                </td>
                <td>
                    <button name="" type="button" value=@x.processor_id onclick="doajaxpr(this)">Add to Cart!</button>
                </td>
            </tr>
        }
    </table>


    @*MEMORIES TABLE*@
    <table class="table">
        <tr class="tr-memories-hidden" style="display:none">
            <th>
                RAM NAME
            </th>
            <th>
                Memory size (mb)
            </th>
            <th>
                Memory type name
            </th>

            @foreach (var x in ViewBag.me)
            {
            <tr class="tr-memories-hidden" style="display:none">
                <td>
                    @x.memory_name
                </td>
                <td>
                    @x.memory_size_mb
                </td>
                <td>
                    @x.memory_types.memory_type_name
                </td>
                <td>
                    <button name="" type="button" value=@x.memory_id onclick="doajaxme(this)">Add to Cart!</button>
                </td>
            </tr>
            }
        </table>


        @*HARD DRIVES TABLE*@
        <table class="table">
            <tr class="tr-harddrives-hidden" style="display:none">
                <th>
                    HARD DRIVE NAME
                </th>
                <th>
                    Buffer (Kb)
                </th>
                <th>
                    Capacity (Gb)
                </th>
                <th>
                    Bus interface name
                </th>
            </tr>

            @foreach (var x in ViewBag.hd)
            {
                <tr class="tr-harddrives-hidden" style="display:none">
                    <td>
                        @x.hard_drive_name
                    </td>
                    <td>
                        @x.buffer_kb
                    </td>
                    <td>
                        @x.capacity_gb
                    </td>
                    <td>
                        @x.bus_interfaces.bus_interface_name
                    </td>
                    <td>
                        <button name="" type="button" value=@x.hard_drive_id id="hd" onclick="doajaxhd(this)">Add to Cart!</button>
                    </td>
                </tr>
            }
        </table>


        @*SOUND CARDS TABLE*@
        <table class="table">

            <tr class="tr-soundcards-hidden" style="display:none">
                <th>
                    SOUND CARD NAME
                </th>
                <th>
                    Sound chip name
                </th>
                <th>
                    Sound channel standard
                </th>
                <th>
                    Expansion slot name
                </th>
            </tr>
            @foreach (var x in ViewBag.sc)
            {
                <tr class="tr-soundcards-hidden" style="display:none">
                    <td>
                        @x.sound_card_name
                    </td>
                    <td>
                        @x.sound_chips.sound_chip_name
                    </td>
                    <td>
                        @x.sound_chips.sound_channel_standards.sound_channel_standard_name
                    </td>
                    <td>
                        @x.expansion_slots.expansion_slot_name
                    </td>
                    <td>
                        <button name="" type="button" value=@x.sound_card_id onclick="doajaxsc(this)">Add to Cart!</button>
                    </td>
                </tr>
            }
        </table>

        @*VIDEO ADAPTERS TABLE*@
        <table class="table">
            <tr class="tr-videocards-hidden" style="display:none">
                <th>
                    VIDEO ADAPTER NAME
                </th>
                <th>
                    Memory (mb)
                </th>
                <th>
                    GPU (if applic.)
                </th>
                <th>
                    Expansion slot
                </th>
                <th>
                    Power supply standard
                </th>
            </tr>
            @foreach (var x in ViewBag.va)
            {
                <tr class="tr-videocards-hidden" style="display:none">
                    <td>
                        @x.video_adapter_name
                    </td>
                    <td>
                        @x.video_adapter_memory_mb
                    </td>
                    <td>
                        @if (x.gpu_id != null)
                        {
                            @x.gpu.gpu_name
                        }
                    </td>
                    <td>
                        @x.expansion_slots.expansion_slot_name
                    </td>
                    <td>
                        @x.power_supply_standards.power_supply_standard_name
                    </td>
                    <td>
                        <button name="" type="button" value=@x.video_adapter_id onclick="doajaxva(this)">Add to Cart!</button>
                    </td>
                </tr>
            }
        </table>

        @*OPTICAL DRIVES TABLE*@
        <table class="table">
            <tr class="tr-opticaldrives-hidden" style="display:none">
                <th>
                    OPTICAL DRIVE NAME
                </th>
                <th>
                    Buffer (Kb)
                </th>
                <th>
                    Bus interface
                </th>
                <th>
                    Drive bay width
                </th>

                @foreach (var x in ViewBag.od)
                {
                <tr class="tr-opticaldrives-hidden" style="display:none">
                    <td>
                        @x.optical_drive_name
                    </td>
                    <td>
                        @x.buffer_kb
                    </td>
                    <td>
                        @x.bus_interfaces.bus_interface_name
                    </td>
                    <td>
                        @x.drive_bay_widths.drive_bay_width_name
                    </td>
                    <td>
                        <button name="" type="button" value=@x.optical_drive_id onclick="doajaxod(this)">Add to Cart!</button>
                    </td>
                </tr>
                }
            </table>

            @*POWER SUPPLIES TABLE*@
            <table class="table">
                <tr class="tr-powersupplies-hidden" style="display:none">
                    <th>
                        POWER SUPPLY NAME
                    </th>
                    <th>
                        Total power (w)
                    </th>
                    <th>
                        Energy eff. %
                    </th>
                    <th>
                        Power supply standard
                    </th>
                    <th>
                        Motherboard form factor
                    </th>
                </tr>
                @foreach (var x in ViewBag.ps)
                {
                    <tr class="tr-powersupplies-hidden" style="display:none">
                        <td>
                            @x.power_supply_name
                        </td>
                        <td>
                            @x.total_power_w
                        </td>
                        <td>
                            @x.energy_efficiency_percentage
                        </td>
                        <td>
                            @x.power_supply_standards.power_supply_standard_name
                        </td>
                        <td>
                            @x.motherboard_form_factors.motherboard_form_factor_name
                        </td>
                        <td>
                            <button name="" type="button" value=x.power_supply_id onclick="doajaxps(this)">Add to Cart!</button>
                        </td>
                    </tr>
                }
            </table>

            @*COMPUTER CASES TABLE*@
            <table class="table">
                <tr class="tr-computercases-hidden" style="display:none">
                    <th>
                        COMPUTER CASE NAME
                    </th>
                    <th>
                        Front USB connector count
                    </th>
                    <th>
                        Depth (mm)
                    </th>
                    <th>
                        Width (mm)
                    </th>
                    <th>
                        Height (mm)
                    </th>
                    <th>
                        Size name
                    </th>
                    <th>
                        Form factor
                    </th>
                </tr>
                @foreach (var x in ViewBag.cc)
                {
                    <tr class="tr-computercases-hidden" style="display:none">

                        <td>
                            @x.computer_case_name
                        </td>
                        <td>
                            @x.front_usb_connector_count
                        </td>
                        <td>
                            @x.depth_mm
                        </td>
                        <td>
                            @x.width_mm
                        </td>
                        <td>
                            @x.height_mm
                        </td>
                        <td>
                            @x.color
                        </td>
                        <td>
                            @x.computer_case_sizes.computer_case_size_name
                        </td>
                        <td>
                            @x.motherboard_form_factors.motherboard_form_factor_name
                        </td>
                        <td>
                            <button name="" type="button" value=@x.computer_case_id onclick="doajaxcc(this)">Add to Cart!</button>
                        </td>
                    </tr>
                }
            </table>

            @*@Html.ActionLink("Save", "Save")*@

        </body>


    </html>
