                </td>
                <td>
                    @if (x.gpu_id != null)
                    {
                        @x.gpu.gpu_name
                    }
                </td>
                <td>
                    @if (x.gpu_id != null)
                    {
                        @x.gpu.gpu_name
                    }
                </td>
                <td>
                    @if (x.gpu_id != null)
