@using System.Collections.Generic

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <p></p>
    <p></p>
    <p></p>
    <p></p>
    <p></p>
    <p></p>

    <table class="table-bordered">
        <tr>
            <th><a href="#mb">Motherboard</a></th>
            <th><a href="#pr">Processors</a></th>
            <th><a href="me">RAM</a></th>
            <th><a href="hd">Hard drives</a></th>
            <th><a href="sc">Sound cards</a></th>
            <th><a href="va">Video adapters</a></th>
            <th><a href="od">Optical drives</a></th>
            <th><a href="ps">Power supplies</a></th>
            <th><a href="cc">Computer cases</a></th>
        </tr>
    </table>

    <p></p>
    <p></p>
    <p></p>
    <table class="table-bordered">
        <tr>
            <td>
                Name
            </td>
            <td>
                Processor Socket
            </td>
            <td>
                RAM type
            </td>
            <td>
                Form Factor
            </td>
            <td>
                Integrated Gpu
            </td>
            <td>
                Power Supply Standard
            </td>
            <td>
                Lan Chip
            </td>
            <td>
                Sound Chip
            </td>
        </tr>
    </table>

    <table class="motherboards-table">
        @foreach (var x in ViewBag.mb)
        {
            <tr>
                <td>
                    @x.motherboard_name
                </td>
                <td>
                    @x.processor_sockets.processor_socket_name
                </td>
                <td>
                    @x.memory_types.memory_type_name
                </td>
                <td>
                    @x.motherboard_form_factors.motherboard_form_factor_name
                </td>
                <td>
                    @if (x.gpu_id != null)
                    {
                        @x.gpus.gpu_name
                    }
                </td>
                <td>
                    @x.power_supply_standards.power_supply_standard_name
                </td>
                <td>
                    @x.lan_chips.lan_chip_name
                </td>
                <td>
                    @x.sound_chips.sound_chip_name
                </td>
                <td>
                    <button name="" type="button" value=@x.motherboard_id id="mb" onclick='UpdateTable()'>Add to Cart!</button>
                </td>
            </tr>
        }
    </table>

