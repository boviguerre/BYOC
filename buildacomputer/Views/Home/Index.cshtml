            <td>
                @Html.DisplayFor(modelItem => item.video_adapters.video_adapter_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.optical_drives.optical_drive_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.power_supplies.power_supply_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.computer_cases.computer_case_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.buildType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.iterator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuildTime)
            </td>
            <td></td>
